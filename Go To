#include<iostream>
using namespace std;
int a = 0;
int b = 0;
int c = 0;
char huruf = 0;
int main()
{
	ulang:
	cout<<"Pengurangan" <<endl<<endl;
	cout<<"Angka pertama       = ";
	cin>>a;
	cout<<"Angka Kedua         = ";
	cin>>b;
	c = a-b ;
	cout<<"Hasil dari "<<a<<" + "<<b<<"  = "<<c<<endl<<endl;
	cout<<"Mau meulangi lagi Y/N = ";
	cin>>huruf;
	{
		if (huruf=='Y'||huruf=='y')
		goto ulang;
		else
		cout<<endl<<"Selesai";
}
	return 0;
}
